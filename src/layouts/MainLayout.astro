---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import { ThemeProvider } from "@/components/providers/ThemeProvider";
import { Sidebar } from "@/components/layout/Sidebar";
import { MobileNav } from "@/components/layout/MobileNav";

interface Props {
  title?: string;
}

const { title = "VibeTravels" } = Astro.props;
const activePath = Astro.url.pathname;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <ThemeProvider client:load>
      <div class="flex h-screen flex-col md:grid md:grid-cols-[240px_1fr] md:grid-rows-1">
        <!-- Desktop Sidebar -->
        <Sidebar client:load activePath={activePath} />

        <!-- Main content area -->
        <div class="flex min-h-0 flex-1 flex-col">
          <!-- Mobile header -->
          <header class="flex h-14 shrink-0 items-center border-b px-4 md:hidden">
            <MobileNav client:load activePath={activePath} />
            <h1 class="ml-4 text-lg font-semibold">VibeTravels</h1>
          </header>

          <!-- Page content -->
          <main class="min-h-0 flex-1 overflow-y-auto overflow-x-hidden bg-background">
            <slot />
          </main>
        </div>
      </div>

      <Toaster client:load transition:persist="toaster" />
    </ThemeProvider>
  </body>
</html>

<!-- eslint-disable -->
<script is:inline define:vars={{}}>
  // Aggressive cleanup before navigation
  document.addEventListener("astro:before-preparation", () => {
    // Force remove overflow hidden that might be left by Sheet component
    document.body.style.overflow = "";
    document.body.style.removeProperty("overflow");

    // Also ensure pointer-events are reset
    document.body.style.pointerEvents = "";
    document.body.style.removeProperty("pointer-events");

    // Force close any open dialogs or sheets
    const escEvent = new KeyboardEvent("keydown", {
      key: "Escape",
      code: "Escape",
      keyCode: 27,
      bubbles: true,
      cancelable: true,
    });
    document.dispatchEvent(escEvent);
  });

  // Reset scroll position after DOM swap
  document.addEventListener("astro:after-swap", () => {
    const main = document.querySelector("main");
    if (main) {
      // Reset scroll to top
      main.scrollTop = 0;

      // Ensure main has correct overflow
      main.style.overflowY = "auto";
    }
  });
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
